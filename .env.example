# Environment Configuration for Seblak Predator
# Copy this file to .env and update the values

# JWT Configuration
JWT_SECRET_KEY=YOUR_JWT_SECRET_KEY
JWT_ALGORITHM=YOUR_JWT_ALGORITHM
JWT_ACCESS_TOKEN_EXPIRY=YOUR_ACCESS_TOKEN_EXPIRY
JWT_REFRESH_TOKEN_EXPIRY=YOUR_REFRESH_TOKEN_EXPIRY
JWT_ISSUER=YOUR_JWT_ISSUER
JWT_AUDIENCE=YOUR_JWT_AUDIENCE

# Database Configuration
DB_HOST=YOUR_DB_HOST
DB_NAME=YOUR_DB_NAME
DB_USER=YOUR_DB_USER
DB_PASSWORD=YOUR_DB_PASSWORD
DB_PORT=YOUR_DB_PORT

# Application Configuration
APP_NAME=Seblak Predator
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# Security Settings
SESSION_ENCRYPTION_KEY=YOUR_SESSION_ENCRYPTION_KEY
CSRF_TOKEN_EXPIRY=YOUR_CSRF_TOKEN_EXPIRY

# Email Configuration (for password reset)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@seblakpredator.com
MAIL_FROM_NAME=YOUR_APP_NAME

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_WINDOW=900

# Password Configuration
PASSWORD_MIN_LENGTH=8

# File Upload
MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp